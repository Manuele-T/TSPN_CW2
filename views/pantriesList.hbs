<div class="main-content">
    <h4 class="text-center my-4">Pantries List</h4>
    <div class="d-flex flex-column align-items-center">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Pantry</th>
                    <th scope="col">Location</th>
                </tr>
            </thead>
            <tbody>
                {{#each pantries}}
                <tr>
                    <td>{{this.name}}</td>
                    <td>{{this.location}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>