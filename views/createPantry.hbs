<div class="main-content">
  <h4 class="text-center my-4">Create a new Pantry</h4>
  <div class="d-flex flex-column align-items-center">
    <form action="/admin/createPantry" method="post">
      <div class="form-group">
        <label for="name">Pantry Name:</label>
        <input type="text" class="form-control" id="name" name="name" required>
      </div>
      <div class="form-group">
        <label for="location">Pantry Location:</label>
        <input type="text" class="form-control" id="location" name="location" required>
      </div>
      <button type="submit" class="btn btn-primary">Create Pantry</button>
    </form>
  </div>
</div>