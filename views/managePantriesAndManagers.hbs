<div class="main-content">
  <h4 class="text-center my-4">Manage Pantries and Managers</h4>
  <div class="d-flex flex-column align-items-center">
    <form action="/admin/managePantriesAndManagers" method="post">
      <div class="form-group">
        <label for="pantryManagerId">Pantry Manager:</label>
        <select id="pantryManagerId" name="pantryManagerId" class="form-control">
          {{#each pantryManagers}}
            <option value="{{this._id}}">{{this.username}}</option>
          {{/each}}
        </select>
      </div>
      <div class="form-group">
        <label for="pantryId">Pantry:</label>
        <select id="pantryId" name="pantryId" class="form-control">
          {{#each pantries}}
            <option value="{{this._id}}">{{this.name}}</option>
          {{/each}}
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Assign Pantry to Manager</button>
    </form>
    <table class="table mt-4">
      <thead>
        <tr>
          <th scope="col">Pantry Manager</th>
          <th scope="col">Assigned Pantry</th>
        </tr>
      </thead>
      <tbody>
        {{#each pantryManagers}}
          <tr>
            <td>{{this.username}}</td>
            <td>{{#if this.pantry}}{{this.pantry.name}}{{else}}None{{/if}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>